{
  "$schema": "node_modules/wrangler/config-schema.json",

  // Nome do Worker (obrigatório)
  "name": "dramabox-api",

  // Entry point do Worker (JS)
  "main": "src/index.js",

  // Data de compatibilidade
  "compatibility_date": "2026-01-15",

  // Logs e métricas no painel Cloudflare
  "observability": {
    "enabled": true
  },

  // KV Namespace para pagamentos PIX
  "kv_namespaces": [
    {
      "binding": "PAYMENTS_KV",
      "id": "7549be858a0f4516adf1ee64e23d0acc"
    }
  ]
}
